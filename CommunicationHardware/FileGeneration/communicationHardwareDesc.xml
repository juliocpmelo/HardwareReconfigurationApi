<!-- 
		 This descripion is necessary to provide information about
		extra input/output required to the communication hardware.
		 The id attribute is used to differ between different communication
		hardware implementations in a bigger execution environment.
-->


<hardwareProject name="" path="">


	<reconfigurableRegion name="region1">
		<communicationHardware>
			<!--
					 These params define the size of the data and address 
					registers connected	the communication hardware.
			-->
			<param name="dataWidth" type="integer" defaultValue="32"/>
			<param name="addressWidth" type="integer" defaultValue="32"/>

			<!--
					 Aditional inputs/outputs
			-->
			<input type="bit" name="extPort1"/>
			<output type="vector" startIndex="0" op="to" endIndex="dataWidth" name="extPort2"/>
		</communicationHardware>
	</reconfigurableRegion>

	<reconfigurableRegion name="region2">
		<communicationHardware>

			<!--
					 These params define the size of the data and address 
					registers connected	the communication hardware.
			-->
			<param name="dataWidth" type="integer" defaultValue="32"/>
			<param name="addressWidth" type="integer" defaultValue="32"/>

			<!--
					 Aditional inputs/outputs
			-->
			<input type="bit" name="extPort1"/>
			<output type="vector" startIndex="0" op="to" endIndex="dataWidth" name="extPort2"/>
		</communicationHardware>
	</reconfigurableRegion>



</hardwareProject>


