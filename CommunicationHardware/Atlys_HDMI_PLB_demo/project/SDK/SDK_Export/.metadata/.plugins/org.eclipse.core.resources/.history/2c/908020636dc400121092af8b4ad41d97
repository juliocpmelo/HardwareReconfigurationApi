#ifndef HARDWARECOMPONENT_H_
#define HARDWARECOMPONENT_H_

typedef int (*GetPort_t)(const char* portName, int* portId);
/*
 * Node of the HardwareReisterMap
 * Keeps the information about the port and registerId that is used to access register data
 */
typedef struct HardwareRegisterMapNode_t{
	char* portName;
	int registerId;
	struct HardwareRegisterMapNode_t *next;
}HardwareRegisterMapNode;

typedef struct HardwareRegisterMap_t{
	HardwareRegisterMapNode *first;
}HardwareRegisterMap;

typedef struct HardwareComponent_t{
	HardwareRegisterMap hardwareRegiterMap;
	char* instanceName;
	GetPort_t getPortId;
} HardwareComponent;

#endif /* HARDWARECOMPONENT_H_ */
