#ifndef ARCHITECTUREMANAGER_H_
#define ARCHITECTUREMANAGER_H_

typedef void (*SetPortValueFunction_t) (HardwareInterfaceModule_t* self,const char componentName, const char* portName, int value);
typedef int (*GetPortValueFunction_t) (HardwareInterfaceModule_t* self,const char* componentName, const char* portName);
typedef void* (*GetComponentRepresentation_t) (HardwareInterfaceModule_t* self,const char* componentName);

typedef struct ArchitectureManager_t {


	/*sets the value from a port in a instance of the component*/
	SetPortValueFunction_t setPortValue;

	/*gets the value from a port in a instance of the component*/
	GetComponentRepresentation_t getPortValue;

} ArchitectureManager;

/*creates a new instance of the ArchitectureManager*/
ArcthiectureManager* createArchitectureManager();

#endif /* ARCHITECTUREMANAGER_H_ */
