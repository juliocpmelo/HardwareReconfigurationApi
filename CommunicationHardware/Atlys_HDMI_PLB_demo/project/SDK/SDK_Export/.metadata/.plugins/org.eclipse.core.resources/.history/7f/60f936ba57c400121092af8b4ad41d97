#ifndef HARDWAREINTERFACE_H_
#define HARDWAREINTERFACE_H_

typedef void (*SetPortValueFunction_t) (HardwareInterfaceModule_t* self,const char* portName, int value);
typedef int (*GetPortValueFunction_t) (HardwareInterfaceModule_t* self,const char* portName);

typedef struct HardwareInterfaceModule_t{
	SetPortValueFunction_t setPortValue;
	GetPortValueFunction_t getPortValue;
}HardwareInterface;

#endif /* HARDWAREINTERFACE_H_ */
